pipeline {
    agent any
    stages {
        stage('Preparar entorno') {
            steps {
                echo 'Preparando entorno PHP...'
                sh 'php -v'
            }
        }
        stage('Ejecutar servidor PHP') {
            steps {
                echo 'Levantando servidor PHP...'
                sh 'nohup php -S 0.0.0.0:50000 -t . > server.log 2>&1 &'
                echo 'Servidor PHP ejecutándose en http://localhost:8085'
            }
        }
        stage('Probar página') {
            steps {
                echo 'Probando página...'
                sh 'curl -I http://localhost:8085/index.php || true'
            }
        }
    }
}
